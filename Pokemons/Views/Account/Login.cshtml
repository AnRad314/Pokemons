@model Pokemons.ViewModels.LoginModel

<h2>Вход на сайт</h2>

<div class="row">
	<div class="col-md-6">
		<a asp-action="Register" asp-controller="Account" asp-route-url="@ViewBag.Url">Регистрация</a>
		<form method="post" asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
			<div class="validation" asp-validation-summary="ModelOnly"></div>
			<input type="hidden" name="Url" value="@ViewBag.Url" />
			<div>
				<div class="form-row col-6 mt-1">
					<label asp-for="Email">Email</label>
					<input type="email" asp-for="Email" class="form-control" placeholder="Введите Email" />
					<span asp-validation-for="Email" />
				</div>
				<div class="form-row col-6 mt-1">
					<label asp-for="Password">Пароль</label>
					<input type="password" asp-for="Password" class="form-control" placeholder="Введите пароль" />
					<span asp-validation-for="Password" />
				</div>
				<div class="form-row mt-3 col-6 justify-content-around">
					<input type="submit" value="Войти" class="btn btn-outline-dark mr-5" />
					<a class="btn btn-outline-secondary" asp-action="ListPokemons" asp-controller="Home"> На главную</a>
				</div>
			</div>
		</form>
	</div>
	
	<div class="col-md-4 col-md-offset-2">
		<h4> Используйте другой сервис для входа в систему.</h4>
		<hr />
		<form asp-action="FacebookLogin" asp-controller="Account" method="post" class="form-horizontal" asp-route-url="@ViewBag.Url">
			<div>
				<button type="submit" class="btn btn-primary" name="provider" value="Facebook" title="Log in using your  account">Facebook</button>
			</div>
		</form>
	</div>
</div>


@section scripts
{
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
