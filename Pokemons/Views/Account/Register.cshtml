@model Pokemons.ViewModels.RegisterModel

<h2>Регистрация нового покупателя</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true" method="post">
	<div class="validation" asp-validation-summary="ModelOnly"></div>
	<input type="hidden" name="url" value="@ViewBag.Url" />
	<div>
		<div class="form-row col-6 mt-1">
			<label asp-for="Name"> Имя </label><br />
			<input type="text" asp-for="Name" class="form-control" placeholder="Введите Имя" />	
			<span asp-validation-for="Name" class="text-danger" />
			<small class="text-muted" >Имя должно состоять из латинских букв и/или цифр </small>
			
		</div>
		<div class="form-row col-6 mt-1">
			<label asp-for="Email">Email</label><br />
			<input type="email" asp-for="Email" class="form-control" placeholder="Введите Email" />
			<span asp-validation-for="Email" class="text-danger" />
		</div>
		<div class="form-row col-6 mt-1">
			<label asp-for="Phone"> Телефон</label><br />
			<input type="tel" asp-for="Phone" class="form-control" placeholder="Введите номер телефона" />
			<span asp-validation-for="Phone" class="text-danger" />
			<small class="text-muted">Введите номер телефона с кодом оператора</small>
		</div>
		<div class="form-row col-6 mt-1">
			<label asp-for="Password">Пароль</label><br />
			<input type="password" asp-for="Password" class="form-control" placeholder="Введите пароль" />
			<span asp-validation-for="Password" class="text-danger" />
		</div>
		<div class="form-row col-6 mt-1">
			<label asp-for="ConfirmPassword">Повторите пароль</label>
			<input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Введите пароль" />
			<span asp-validation-for="ConfirmPassword" class="text-danger" />
		</div>
		<div class="form-row mt-3 col-6 justify-content-around">
			<input type="submit" value="Регистрация" class="btn btn-outline-primary " />
			<a class="btn btn-outline-secondary" asp-action="ListPokemons" asp-controller="Home"> На главную</a>
		</div>
	</div>
</form>

@section scripts{

	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}